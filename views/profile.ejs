<div class="d-flex flex-column dashboardSidebar ">    
    <div class="d-flex">
        <%- include('./components/sidebar')%>

        <div class="container body">
            <div class="border">
                <h1>HELLO</h1>
                <% if (!user.profilePic) { %>
                    <img class="img-fluid img-thumbnail w-50" src="../public/uploads/licensed-image.jpg">
                <% } else { %>
                    <img class="img-fluid img-thumbnail w-50" src="<%= user.profilePic %>">
               <% } %>             
                <form action="/profile" method="POST" enctype="multipart/form-data">
                    <input type="file" name="picture">
                    <input type="submit" value="Save" class="btn btn-secondary">
                </form>
            </div>
        </div>
    </div>

</div>
